{
  "name": "@xagi/vite-plugin-design-mode",
  "version": "1.0.8",
  "description": "Vite plugin for Design Mode - enables visual editing of React components with source mapping",
  "type": "module",
  "main": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "vite",
    "plugin",
    "react",
    "design-mode",
    "source-mapping",
    "hot-reload"
  ],
  "author": "XAGI Team",
  "license": "MIT",
  "peerDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/types": "^7.0.0",
    "vite": ">=4.0.0"
  },
  "dependencies": {
    "@babel/standalone": "^7.23.0",
    "@babel/traverse": "^7.24.0",
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.0",
    "@types/babel__standalone": "^7.1.9",
    "@types/babel__traverse": "^7.20.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc && node scripts/copy-client.mjs",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx"
  }
}
